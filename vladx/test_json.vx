# Тест функции код/разкод
печать("Тестирование функций код/разкод")

# Создаем объект
пусть исходный = {
    имя: "Влад",
    возраст: 30,
    город: "Москва",
    массив: [1, 2, 3]
}

печать("Исходный объект:")
печать("  имя: " + исходный.имя)
печать("  возраст: " + исходный.возраст)
печать("  город: " + исходный.город)
печать("  массив: " + исходный.массив)

# Сериализуем в JSON строку
пусть строка = код(исходный)
печать("Сериализованная строка: " + строка)

# Десериализуем обратно
пусть обратно = разкод(строка)
печать("Десериализованный объект:")
печать("  имя: " + обратно.имя)
печать("  возраст: " + обратно.возраст)
печать("  город: " + обратно.город)
печать("  массив: " + обратно.массив)

# Проверяем, что значения совпадают
если (обратно.имя == исходный.имя и обратно.возраст == исходный.возраст) {
    печать("✓ Десериализация прошла успешно!")
} иначе {
    печать("✗ Ошибка десериализации")
}

# Тест с простыми значениями
пусть число = 42
пусть строкаЧисло = код(число)
пусть обратноеЧисло = разкод(строкаЧисло)
печать("Число: " + число + ", десериализованное: " + обратноеЧисло)

пусть текст = "Привет, мир!"
пусть строкаТекст = код(текст)
пусть обратныйТекст = разкод(строкаТекст)
печать("Текст: " + текст + ", десериализованный: " + обратныйТекст)

печать("Тест функций код/разкод завершен!")