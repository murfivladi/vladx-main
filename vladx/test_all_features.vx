пусть имя = "VladX"
пусть версия = "1.0.0"
печать("Язык: " + имя + " версия " + версия)

# Тест функций
функция сложить(a, b) {
    вернуть a + b
}
печать("Сложение 5 + 3 = " + сложить(5, 3))

# Тест условий
если (длина(имя) > 3) {
    печать("Имя языка достаточно длинное")
} иначе {
    печать("Короткое имя")
}

