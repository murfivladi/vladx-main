для (пусть i = 1; i <= 3; i = i + 1) {
    печать("  " + i)
}

# Тест деструктуризации массива
пусть [первый, второй, третий] = ["один", "два", "три"]
печать("Деструктуризация: " + первый + ", " + второй + ", " + третий)

# Тест деструктуризации объекта
пусть {название, синтаксис} = проект
печать("Деструктуризация объекта: " + название + " с " + синтаксис + " синтаксисом")

# Тест параметров по умолчанию
функция привет(имя, приветствие = "Привет") {
    вернуть приветствие + ", " + имя + "!"
}
печать(привет("Пользователь"))
печать(привет("Анна", "Здравствуй"))

# Тест rest параметров
функция суммаВсех(...числа) {
    пусть сумма = 0
    для (пусть i = 0; i < длина(числа); i = i + 1) {
        сумма = сумма + числа[i]
    }
    вернуть сумма
}
печать("Сумма всех (1,2,3,4,5): " + суммаВсех(1, 2, 3, 4, 5))

# Тест составных присваиваний
пусть x = 10
x += 5
печать("x += 5: " + x)

# Тест битовых операций
пусть a = 8
пусть b = 2
печать("a << b (сдвиг влево): " + (a << b))

# Тест spread оператора в массивах
пусть arr1 = [1, 2, 3]
пусть arr2 = [4, 5, 6]
пусть combined = [...arr1, ...arr2]
печать("Spread в массивах: " + combined)

печать("=== Все тесты пройдены успешно! ===")